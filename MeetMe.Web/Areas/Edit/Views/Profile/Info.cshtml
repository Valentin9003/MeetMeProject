@model ProfileInfoViewModel

@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}


<style>
    .form-group-sm {
        color: black;
    
    }
    .form-control {
   background-color:darkgray;
   border-color:black;
    }
    a 
    {
        color:white;
        
    }
    .text-info
    {
        border:double; 
        border-color:black;
    }
    .Enums
    {
        border:double;
        border-left-color:green;
        border-right-color:red;
    }
   
     
</style>

<partial name="_NavigationMenuEditProfile" />

<form method="post" class="form">
<div class="input form-group-sm">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="danger"></span>
    </div>

    <div class="form-group-sm">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="danger"></span>
    </div>

    <div class="form-group-sm">
        <label asp-for="Country"></label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="danger"></span>
    </div>


    <div class="form-group-sm">
        <label asp-for="City"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="danger"></span>
    </div>

    <div class="form-group-sm">
        <label asp-for="Height"></label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="danger"></span>
    </div>

    <div class="form-group-sm">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control " />
        <span asp-validation-for="Weight" class="danger"></span>
    </div>
    <br/>
    <div class="container">
        <div class="row">


            <div class="form-group-sm col-lg-4 col-md-4">
                <label class="Enums"  asp-for="LookingFor"></label>
                <select class="Enums form-control-static"  asp-for="LookingFor" asp-items="Html.GetEnumSelectList<LookingFor>()" ></select>
                <span asp-validation-for="LookingFor" class="danger"></span>
            </div>

            <div class="form-group-sm col-lg-4 col-md-4">
                <label class="Enums"  asp-for="Sex"></label>
                <select class="Enums form-control-static"  asp-for="Sex" asp-items="Html.GetEnumSelectList<Sex>()" ></select>
                <span asp-validation-for="Sex" class="danger"></span>
            </div>

            <div form-group-sm col-lg-4 col-md-4">
                <label class="Enums" asp-for="EyeColor"></label>
                <select class="Enums form-control-static" asp-for="EyeColor" asp-items="Html.GetEnumSelectList<EyeColor>()" ></select>
                <span asp-validation-for="EyeColor" class="danger"></span>
            </div>
        </div>
    </div>
    <br/>
    

            <div class="form-group-lg col-lg-12">
                <label asp-for="Biography" class="text-area"></label>
                <textarea class="text-info col-lg-12 col-md-12 col-sm-12 col-xs-12"  asp-for="Biography" rows="2" cols="140"></textarea>
                <span asp-validation-for="Biography" class="danger"></span>
            </div>
    <br/>
            <div class="form-group-sm">
                <label asp-for="BirthDay"></label>
                <input asp-for="BirthDay" class="navbar-form" >
                <span asp-validation-for="BirthDay" class="bg-primary"></span>

            </div>


    <button type="submit" class="btn btn-warning">Запази промените!</button>
</form>






